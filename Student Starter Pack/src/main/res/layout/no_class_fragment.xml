<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/newbg"
    >

    <TextView
        android:text="No Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="72dp"
        android:layout_y="43dp" />

    <Button
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="112dp"
        android:id="@+id/btnDate"
        android:layout_alignBaseline="@+id/etDesc"
        android:layout_alignBottom="@+id/etDesc"
        android:layout_alignLeft="@+id/etDeadline"
        android:layout_alignStart="@+id/etDeadline" />

    <EditText
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:ems="10"
        android:layout_x="107dp"
        android:layout_y="117dp"
        android:id="@+id/etDate"
        android:text="No Class Date"
        android:editable="false"
        android:clickable="false"
        android:cursorVisible="true"
        android:focusable="false"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_width="248dp"
        android:layout_height="146dp"
        android:inputType="textCapSentences"
        android:ems="10"
        android:layout_x="16dp"
        android:layout_y="174dp"
        android:id="@+id/etDesc"
        android:hint="Enter No-Class Description here" />

    <Button
        android:text="Submit"
        android:layout_width="132dp"
        android:layout_height="59dp"
        android:layout_x="81dp"
        android:layout_y="336dp"
        android:id="@+id/btnSubmit" />

</AbsoluteLayout>
